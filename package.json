{
  "name": "hapi-boilerplate",
  "description": "Some name of some rest api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "start": "node -r source-map-support/register dist",
    "build": "tsc",
    "prettier": "prettier --write 'src/**/*.ts' 'tasks/**/*.js'",
    "watch": "tsc --watch",
    "postinstall": "./tasks/postinstall.sh",
    "test": "run-s test:*",
    "test:compile": "tsc --noEmit",
    "test:lint": "tslint -c tslint.json 'src/**/*.ts' 'tests/**/*.ts'",
    "test:unit": "jest"
  },
  "devDependencies": {
    "@types/hapi": "^18.0.0",
    "@types/inert": "^5.1.2",
    "@types/jest": "^23.3.13",
    "@types/joi": "^14.3.0",
    "@types/node": "^10.12.18",
    "@types/pino": "^5.8.4",
    "@types/vision": "^5.3.5",
    "@types/yup": "^0.26.6",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "joi-extract-type": "^0.1.5",
    "lint-staged": "^8.1.1",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4"
  },
  "dependencies": {
    "boom": "^7.3.0",
    "colors": "^1.3.3",
    "hapi": "^18.0.0",
    "hapi-pino": "^5.2.0",
    "hapi-swagger": "^9.3.0",
    "inert": "^5.1.2",
    "joi": "^14.3.1",
    "pino": "^5.11.1",
    "pino-pretty": "^2.5.0",
    "prettier": "^1.16.1",
    "source-map-support": "^0.5.10",
    "vision": "^5.4.4"
  },
  "lint-staged": {
    "*.{js,ts}": ["prettier --write", "git add"]
  }
